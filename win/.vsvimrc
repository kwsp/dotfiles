" Config for the VsVim plugin of Visual Studio
set ignorecase
set smartcase

let mapleader = " "

nnoremap <leader>gd :vsc Edit.GoToDefinition <C-r><C-w><CR>
" Show tooltip 
nnoremap K :vsc Edit.QuickInfo<CR>

" Go to issues
nnoremap [d :vsc Edit.GotoPreviousIssueinFile<CR>
nnoremap ]d :vsc Edit.GotoNextIssueinFile<CR>
